@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row mt-3">
    <div class="col-xs-6 col-xs-offset-3">
        <h2>@ViewBag.Title</h2>
    </div>
</div>

<div class="row">
    <form id="frmLogin">
        <div class="col-xs-6 col-xs-offset-3">
            <label class="mt-2">
                Usuario
            </label>
            <input type="text" class="form-control" name="username" />
            <label>
                Contraseña
            </label>
            <input type="password" class="form-control" name="password" />
            <input type="submit" class="btn btn-primary mt-2" name="entrar" value="Entrar" />
        </div>
    </form>
</div>

@section scripts
{
    <script>
        $(document).ready(() => {
            $('#frmLogin').submit(function(e) {
                e.preventDefault();
                const url = '@Url.Content("~/Login/Entrar")';
                const parametros = $(this).serialize();

                $.post(url, parametros, (datos) => {
                    if (datos === '1') {
                        document.location.href = "@Url.Content("~/")"
                    } else {
                        alertify.alert(datos).set({title: 'Alerta'});
                    }
                });
            });
        });
    </script>
}
